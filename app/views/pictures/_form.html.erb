<%= form_for(@picture,url:choose_new_or_edit) do |f| %>
<% if @picture.errors.any? %>
<div id="error_explanation">
  <h2><%= @picture.errors.count %>件のエラーがあります。</h2>

  <ul>
    <% @picture.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= f.label :タイトル %>
<%= f.text_field :title, class:'form-control' %>
<br>
<%= f.label :内容 %>
<%= f.text_field :content, class:'form-control'%>
<br>
<div class="field">
    <%= f.label :写真 %><br>

<%= f.label :"タイトル" %>
<%= f.text_field :title, class:'form-control' %>
<br>
<%= f.label :"内容" %>
<%= f.text_field :content, class:'form-control'%>
<br>
<div class="field">
    <%= f.label :"写真" %><br>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
</div>
<br>

<%= f.submit '投稿', class:'btn btn-primary btn-block' %>
<br>
<%= f.submit"Picturesへ戻る",name: 'back', class:'btn btn-default btn-block' %>
<% end %>
