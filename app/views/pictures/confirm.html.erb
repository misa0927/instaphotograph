<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で、投稿する</h3>

    <%= form_for(@picture) do |f| %>
    <%= f.hidden_field :title %>
    <%= f.hidden_field :content %>

    <p>title:<%= @picture.title %></p>
    <p>content:<%= @picture.content %></p>
    <%= image_tag(@picture.image.url) %>
    <%= f.submit"投稿する", class:'btn btn-primary btn-block'%>
    <% end %>

    <%= form_for(@picture,url: new_picture_path,method:'get') do |f| %>
    <%= f.hidden_field :title %>
    <%= f.hidden_field :content %>
    <%= hidden_field_tag :"cache[image]",@picture.image.cache_name %>
    <%= f.submit "戻る", name:'back', class:'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>
