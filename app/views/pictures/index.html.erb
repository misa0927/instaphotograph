<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>Pictures</h1>
    <%= link_to "写真を投稿する",new_picture_path, class:'btn btn-default' %>

    <% @pictures.each do |picture| %>
      <div class="row">
        <%= profile_img(picture.user) %>
          <p><%=picture.user.name %></p>
            <h4><strong>title:<%= picture.title %></strong></h4>
            <p>content:<%= picture.content %></p>
              <%if picture.image? %>
              <%= image_tag (@picture.image.url) %>
              <% else %>
              <%= image_tag 'no_image.png' %>
              <% end %>
              <br>
              <%= link_to "編集", edit_picture_path(picture.id),class:'btn btn-default btn-sm btn-success' %>
              <%= link_to "削除",picture_path(picture.id), method: :delete, data:{confirm:'本当に削除していいですか？'},class:'btn btn-default btn-sm btn-danger'%>
        </div>
    <% end %>
  </div>
</div>
