<section>
  <article class="wrap">
    <p class="flash"><%= notice %><%= alert %></p>
    <!-- iphone_image -->
    <section class="container-fluid">
        <div class="row">
          <div class="col-sm-6 hidden-xs">
          <div class="mockup">
            <div class="img_position">
            <ul class="bxslider">
              <li><img src=<%=asset_path"feed.png" %>></li>
              <li><img src=<%=asset_path"edit.png" %>></li>
              <li><img src=<%=asset_path"cat.png" %>></li>
              <li><img src=<%=asset_path"cancel.png" %>></li>
              <li><img src=<%=asset_path"profile.png" %>></li>
            </ul>
            </div>
          </div>
        </div>

    <!-- signup_form -->
        <div class="col-sm-6">
          <section class="form_wrap">
            <div class="signup">
              <div class="logo">
                <h1>Instagraph</h1>
              </div>
              <div class="form">
                <h2>写真を投稿してみよう</h2>
              <!-- facebook_button あとでパス変更-->
                <div><%= link_to"Facebookでログイン",pictures_path,class: 'btn btn-primary btn-block'  %></div>

                <div class="input">
                  <p><span>または</span></p>
                </div>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>
                  <div class="field">
                    <%= f.email_field :email, autofocus: true,class: "form-control", placeholder: "メールアドレス" %>
                  </div>
                  <div class="field">
                    <%= f.email_field :name, class: "form-control", placeholder: "名前" %>
                  </div>
                  <div class="field">
                    <%= f.password_field :password, autocomplete: "off",class: "form-control", placeholder: "パスワード" %>
                  </div>
                  <div class="field">
                    <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control", placeholder: "パスワード（確認用）" %>
                  </div>
                  <div class="actions">
                    <%= f.submit "登録する",class: "btn btn-primary btn-block" %>
                  </div>
                <% end %>

              <!-- privacypolicy -->
                <p class="pp">登録することで、利用規約とプライバシーポリシーに同意するものとします。</p>
              </div>
            </div><!-- singup -->

            <!-- login -->
            <div class="signup">
              <% if user_signed_in? %>
              <li><%= link_to 'ログアウトする',destroy_user_path, method: :delete %></li>
              <% else %>
              <li><p class="account">アカウントをお持ちですか？<%=link_to'ログインする', new_user_session_path %></p></li>
              <% end %>
            </div>
          </section><!-- form_wrap -->
        </div>
      </div>
    </section>
  </article>
</section>
